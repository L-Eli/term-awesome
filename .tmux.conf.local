# this is the place to further customize tmux's configuration

set -g history-limit 10000

# ç”¨-|åˆ‡åˆ† panelï¼Œç›´è§€
unbind '"'
bind - splitw -v
unbind %
bind \\ splitw -h

# ä½¿ç”¨ç»„åˆéµç›´æ¥é¸æ“‡ panel
bind -n C-i select-pane -U
bind -n C-k select-pane -D
bind -n C-j select-pane -L
bind -n C-l select-pane -R

bind -n M-i select-pane -U
bind -n M-k select-pane -D
bind -n M-j select-pane -L
bind -n M-l select-pane -R



# æ”¹è®Š panel å¤§å°
bind -r C-I resize-pane -U 2
bind -r C-K resize-pane -D 2
bind -r C-J resize-pane -L 2
bind -r C-L resize-pane -R 2

# æ»¾è¼ª & æ»¾å±
bind -T root WheelDownPane if-shell -F -t = "#{pane_in_mode}" "send-keys -M" "copy-mode; send-keys -M"
bind -T root WheelUpPane if-shell -F -t = "#{pane_in_mode}" "send-keys -M" "copy-mode; send-keys -M"

set-window-option -g mode-keys vi

# å–æ¶ˆ tab éµåˆ‡æ¢ panelï¼Œæ¢å¾©é»˜èªæ•ˆæœ
unbind -n tab

# æç¤ºä¿¡æ¯é¡¯ç¤ºæ™‚é•·  10*1000 ms
set -g display-time 10000

# è¨­å®šå‰ç¶´ç‚º alt+b
set -g prefix2 M-b
bind M-b send-prefix -2

# cygwin ctrl-v
if-shell 'uname | grep -qi Cygwin' 'bind -T root C-v run "cat /dev/clipboard | tmux load-buffer - ; tmux paste-buffer"'

unbind C-b
unbind -n C-j
unbind -n C-k
bind a send-prefix
bind ` last-window
set-option -g prefix `
set-option repeat-time 0
